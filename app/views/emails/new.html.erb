<h3>Send your email here</h3>

<%= form_for @email do |f| %>
<%= render 'shared/error_messages', :object => f.object %>

<div class="format">
<%= f.label :name %><br />
<%= f.text_field :name %>
</div>

<div class="format">
Destination email<br />
<%= f.text_field :email %>
</div>

<div class="format">
<%= f.label :message %><br />
<%= f.text_area :message %>
</div> 

<div class="format">
<%= f.label :date %><br />
<%= f.text_field :date %>
</div>

<div class="format">
<%= f.submit "Create" %>
</div>

<% end %>

